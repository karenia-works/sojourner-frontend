@import 'breakpoints'
@import 'sizes'

// @import '/src/assets/fonts/blokkfont.css'
body {
  padding: 0px
  margin: 0px
}

h1,
h2,
h3,
h4 {
  font-family: fonts-title
  text-align: left
}

h1 {
  font-size: 48px
  font-weight: 500
  text-transform: uppercase
}

h2 {
  font-size: 32px
  font-weight: 500
  text-transform: uppercase
}

h3 {
  font-size: 28px
}

h4 {
  font-size: 24px
}

div a {
  color: inherit
  font: inherit
  display: inherit
  text-decoration: inherit

  p a {
    display: inline
  }
}

p {
  line-height: 1.25

  .loading & {
    line-height: 2
  }
}

.container {
  padding-v: spaces._5

  +break-screen(0, breakpoints.small) {
    margin-h: auto
    margin-h: spaces._3
  }

  +break-screen(breakpoints.small, breakpoints.medium) {
    lost-center: 720px
  }

  +break-screen(breakpoints.medium, breakpoints.large) {
    lost-center: 960px
  }

  +break-screen(breakpoints.large) {
    lost-center: 1280px
  }
}

.background {
  &.color-darker {
    background-color: var(--color-bg-medium)
  }
}

.input {
  background: transparent
  border: none

  accent = var(--color-accent)
  accent-transparent = var(--color-accent-transparent)

  border-top: solid transparent spaces._1
  border-bottom: solid accent-transparent spaces._1
  font-family: fonts-title
  font-size: font-sizes.small-title
  // margin-bottom: spaces._1
  margin-h: spaces._1
  padding-h: spaces._1
  transition: all 120ms

  &:focus {
    border-bottom: solid accent spaces._1
    // margin-bottom: 0px
  }

  &.err,
  &.error {
    border-bottom-color: colors.error
  }

  &::placeholder {
    color: var(--color-text-medium)
  }

  &.body {
    font-family: fonts-body
  }
}

.btn {
  font-family: fonts-title
  font-size: font-sizes.small-title
  font-weight: bold
  text-transform: uppercase
  background: none
  border: none

  gradient-hover(var(--color-accent), var(--color-accent-transparent), spaces._1)

  margin-h: spaces._2
  padding-h: spaces._2
}

.content a,
.btn-span {
  gradient-hover(var(--color-accent), var(--color-accent-transparent), spaces._1)

  margin-h: spaces._1
  padding-h: spaces._1
}

.jumbotron {
  h1 {
    font-size: font-sizes.huge-title
    font-weight: normal
  }

  h2 {
    font-size: font-sizes.large-title
    font-weight: normal
  }
}

.mdi {
  line-height: 1
}
